﻿<div class="row">
	<div class="d-flex justify-content-between">
		<div class="align-self-end">
			<form class="mt-3" asp-controller="products" method="get" asp-action="Index">
				<p>
					<select id="select" asp-items="@ViewBag.Categories">
						<option selected="true" disabled="disabled">
							Выбрать Категорию
						</option>
					</select>
				</p>
			</form>
		</div>

		<div class="align-self-end mb-3">
			<a class="btn btn-success " asp-action="Create">
				Create Product
			</a>
		</div>
	</div>

	<div class="px-4 pb-4">
		<ejs-grid id="products-list"
				  dataSource="@ViewBag.Products"
				  gridLines="Vertical"
				  allowSorting="true">
			<e-grid-pagesettings pageSize="10"></e-grid-pagesettings>
			<e-grid-columns>
				<e-grid-column headerText="Идентификатор" field="Id" typeof="text"></e-grid-column>
				<e-grid-column headerText="Название" field="Name" typeof="text"></e-grid-column>
				<e-grid-column headerText="Описание" field="Description" typeof="text"></e-grid-column>
				<e-grid-column headerText="Приходная цена" field="SupplyPrice" typeof="text"></e-grid-column>
				<e-grid-column headerText="Продажная цена" field="SalePrice" typeof="text"></e-grid-column>
				<e-grid-column headerText="Категория Id" field="CategoryId" typeof="date"></e-grid-column>
			</e-grid-columns>
		</ejs-grid>
	</div>
</div>

